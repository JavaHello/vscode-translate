{
    "name": "translate",
    "displayName": "translate",
    "description": "翻译工具",
    "version": "0.5.0",
    "publisher": "luokai",
    "keywords": [
        "translate",
        "翻译"
    ],
    "engines": {
        "vscode": "^1.29.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.translate"
    ],
    "icon": "./icon.png",
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.translate",
                "title": "translate"
            }
        ],
        "keybindings": [
            {
                "command": "extension.translate",
                "key": "Ctrl+6",
                "mac": "Ctrl+6",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "translate configuration",
            "properties": {
                "translate.youdao.appKey": {
                    "type": "string",
                    "default": "",
                    "description": "有道翻译appKey"
                },
                "translate.youdao.appSecret": {
                    "type": "string",
                    "default": "",
                    "description": "有道翻译appSecret"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "license": "SEE LICENSE IN LICENSE.txt",
    "bugs": {
        "url": "https://github.com/JavaHello/vscode-translate/issues",
        "email": "smcbreen@microsoft.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/JavaHello/vscode-translate"
    },
    "homepage": "https://github.com/JavaHello/vscode-translate/blob/master/README.md"
}
